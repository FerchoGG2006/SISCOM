# =====================================================
# SISCOM - Variables de Entorno
# =====================================================

# Servidor
NODE_ENV=development
PORT=3001
API_PREFIX=/api/v1

# Base de Datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=siscom_db
DB_POOL_SIZE=10

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Google Drive API
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-service-account.json
GOOGLE_DRIVE_ROOT_FOLDER_ID=your_root_folder_id_here

# Prefijo para radicados (ej: HS para Hogares Seguros)
RADICADO_PREFIX=HS

# Cors
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=debug
LOG_FILE=logs/siscom.log

# Almacenamiento de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Firma Digital
SIGNATURE_CANVAS_WIDTH=600
SIGNATURE_CANVAS_HEIGHT=200
